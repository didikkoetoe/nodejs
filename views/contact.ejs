<h1 class="text-center">Daftar Contact</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nama</th>
      <th scope="col">Nomor HP</th>
      <th scope="col">Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% if (contacts.length===0 ) { %>
      <tr>
        <td colspan="4">
          <div class="alert alert-danger text-center" role="alert">
            Data masih kosong !
          </div>
        </td>
      </tr>
      <% } else { %>
        <% contacts.forEach((contact, i)=> {i++ %>
          <tr>
            <th scope="row">
              <%= i++ %>
            </th>
            <td>
              <%= contact.nama %>
            </td>
            <td>
              <%= contact.noHP %>
            </td>
            <td>
              <a href="/contact/<%= contact.nama %> " class="btn btn-success">Detail</a>
            </td>
          </tr>
          <% }) %>
            <% } %>
  </tbody>
</table>